<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#32000000">

            <ImageView
                android:id="@+id/imageView_htmlfund"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_iconfinder_22_940979"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/textView_htmfund_item_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Lesson 1"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@+id/imageView_htmlfund"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_htmlfund_item_titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/what_is_html"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="@+id/textView_htmfund_item_lesson"
                app:layout_constraintTop_toBottomOf="@+id/textView_htmfund_item_lesson" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>